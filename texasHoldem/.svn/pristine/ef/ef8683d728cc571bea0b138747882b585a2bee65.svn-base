package tarkistajat;

import logiikka.Kasi;
import Logiikka.Korttipakka.Kortti;
import java.util.ArrayList;

/**
 *
 * @author Tero
 */
public class Vari implements Tarkistettava {
    public static final int ARVO = 6;
    @Override
    public int tarkista(int[] maarat, Kasi kasi) {
        int[] maat = new int[4];
        for (int i = 0; i < kasi.getMaara(); i++) {
            maat[kasi.getKortti(i).getMaa()]++;
        }
        for (int i = 0; i < maat.length; i++) {
            if (maat[i] == 5) {
                jarjesta(kasi);
                //kasi.setTeksti(Kortti.korttiMaat[i] + " vÃ¤ri, korkein " + Kortti.korttiArvot[kasi.jarjestetytKortit.get(4).getArvo()]);
                return ARVO;
            }
        }
        return 0;
    }
    
    public static void jarjesta(Kasi kasi){
        kasi.jarjestaArvollaSuurimmastaPienimpaan();
        if(kasi.getKortti(kasi.getMaara()-1).getArvo() == 0){
            kasi.vaihdaPaikat(kasi.getMaara()-1, 0);
        }
    }
}
