    public Kortti[] otaKateenKaikkiKortit(Kasi kasi, Poyta poyta){
        Kortti[] kaikkiKortit = new Kortti[7];
        Kortti kortti;
        for(int i=0; i<2; i++){
            kortti = kasi.getKortti(i);
            kaikkiKortit[i]=kortti;
