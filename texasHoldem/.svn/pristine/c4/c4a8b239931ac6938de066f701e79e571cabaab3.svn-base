        for(int i=0; i<2; i++){
            kortti = kasiKortit.getKortti(i);
            kaikkiKortit[i]=kortti.getArvo();
        }
        int j=2;
        for(int i=0; i<5; i++){
            kortti=poytaKortit.getKortti(i);
            kaikkiKortit[j]=kortti.getArvo();
            j++;
        }
        java.util.Arrays.sort(kaikkiKortit);
        return kaikkiKortit;

    }

