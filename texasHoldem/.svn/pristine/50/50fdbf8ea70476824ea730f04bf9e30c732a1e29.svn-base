
public class Kortti {

    private String[] maat = {"Hertta", "Ruutu", "Risti", "Pata"};
    private String[] lyhmaat = {"H", "D", "C", "S"};
    private int maa;
    private int arvo;
    private int numero;

    public Kortti(int numero) {
        this.numero = numero;
        maa = numero % 4;
        arvo = numero / 4 + 1;

    }
/**
 * Kortilla on arvo ja maa.
 * @param arvo
 * @param maa 
 */
    public Kortti(int arvo, int maa) {
        this.arvo = arvo;
        this.maa = maa;
    }
/**
 * Palauttaa kortin arvon.
 * @return arvo
 */
    public int getArvo() {
        return arvo;
    }
/**
 * Palauttaa kortin maan.
 * @return maa
 */
    public int getMaa() {
        return maa;
    }
    
    public String getMaa(boolean lyh) { // maa
        if(lyh)
            return lyhmaat[maa];
        return maat[maa];
    }
}
